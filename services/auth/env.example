# ==============================================================================
# VARIABLES DE ENTORNO - SERVICIO DE AUTENTICACIÓN
# ==============================================================================
# Renombrar este archivo a .env y configurar los valores
# 
# IMPORTANTE: NUNCA commitear el archivo .env con valores reales
# ==============================================================================

# ------------------------------------------------------------------------------
# CONFIGURACIÓN GENERAL
# ------------------------------------------------------------------------------

# Nombre del servicio
SERVICE_NAME=auth-service

# Entorno: development, staging, production
ENVIRONMENT=development

# Modo debug (NUNCA true en producción)
DEBUG=true

# ------------------------------------------------------------------------------
# BASE DE DATOS (PostgreSQL)
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/auth_db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ------------------------------------------------------------------------------
# CACHE (Redis)
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# ------------------------------------------------------------------------------
# JWT (CRÍTICO - CAMBIAR EN PRODUCCIÓN)
# ------------------------------------------------------------------------------
SECRET_KEY=CAMBIAR_ESTA_CLAVE_EN_PRODUCCION_usar_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ------------------------------------------------------------------------------
# OAUTH2 - GOOGLE
# ------------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8001/auth/oauth/google/callback

# ------------------------------------------------------------------------------
# OAUTH2 - FACEBOOK
# ------------------------------------------------------------------------------
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:8001/auth/oauth/facebook/callback

# ------------------------------------------------------------------------------
# EMAIL
# ------------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@tu-ecommerce.com

# ------------------------------------------------------------------------------
# SEGURIDAD
# ------------------------------------------------------------------------------
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
RATE_LIMIT_PER_MINUTE=60

# ------------------------------------------------------------------------------
# CORS
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

